<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/image_no_event"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:tint="?attr/cellTextColorOff"
        app:srcCompat="@drawable/ic_event_note_black_24dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/current_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="todats's day"
        android:layout_below="@+id/image_no_event"
        android:textAlignment="center"
        android:textColor="?attr/cellTextColorOff"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/tv_no_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="?attr/cellTextColorOff"
        android:text="@string/no_events"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_below="@+id/current_date"
        />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/ic_add_black_24dp" />


</RelativeLayout>