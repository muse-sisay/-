<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/image_no_event"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:tint="?attr/cellTextColorOff"
        app:srcCompat="@drawable/ic_event_note_black_24dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/start_message_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="todats's day"
        android:layout_below="@+id/image_no_event"
        android:textAlignment="center"
        android:textColor="?attr/cellTextColorOff"
        android:textSize="16dp"/>




</RelativeLayout>